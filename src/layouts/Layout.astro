---
import Footer from "../components/Footer.astro";
import NavBar from "../components/NavBar"

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="[scroll-behavior:smooth;]">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="/styles/main.css">
		<title>{title}</title>
	</head>
	<body class="bg-black pt-[52px] relative [-webkit-tap-highlight-color:transparent]">
		<NavBar client:load />
		<slot />
		<img class="absolute h-screen -z-10 top-0 bottom-0 left-0" src="/shadow.png" alt="shadow" />
		<img class="absolute h-screen -z-10 top-0 bottom-0 right-0" src="/shadow2.png" alt="shadow" />
		<Footer /> 
	</body>
</html>

