---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header';
import ListIcons from '../components/ListIcons';
import SectionFullyCustomizable from '../components/SectionFullyCustomizable.astro';
import SectionAdvantages from "../components/SectionAdvantages.astro"
import Profile from '../components/Profile.astro';
import SectionAboutMe from '../components/SectionAboutMe.astro';
import SectionProjects from '../components/SectionProjects.astro';
import ProjectInfo from "../components/ProjectInfo"
import ImagesProjects from '../components/ImagesProjects';
import SectionContact from '../components/SectionContact.astro';
import SectionMultipleDevices from '../components/SectionMultipleDevices.astro'
---

<Layout title="Rogelio LÃ³pez | Web Developer | Portfolio">
	<Header />
	<main class="max-w-4xl mx-auto relative">
		<ListIcons />
		<div class="flex flex-col">
			<div class="flex max-sm:flex-col">
				<Profile />
				<SectionAboutMe />
			</div>
			<SectionProjects>
				<ImagesProjects slot='images' client:load/>
